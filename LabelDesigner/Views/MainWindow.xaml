<Window x:Class="LabelDesigner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabelDesigner"
        mc:Ignorable="d"
        Title="Label Designer" 
        MinHeight="435" 
        MinWidth="600"
        Background="White"
        ResizeMode="CanResize" WindowStyle="ThreeDBorderWindow" WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Left Area -->
        <Border>
        <StackPanel Grid.Column="0" Background="#FFF0F0F0" >
            <!-- Label Size -->
            <TextBlock Text="Label Size" FontWeight="Bold"/>
            <TextBlock Text="Width (in):" Margin="10,0,10,0"/>
            <TextBox x:Name="WidthBox" Text="4" Margin="0,0,0,5"/>
            <TextBlock Text="Height (in):" Margin="10,0,10,0"/>
            <TextBox x:Name="HeightBox" Text="4" Margin="0,0,0,10"/>
            <Button Content="Set Label Size"
                    Click="ApplySize_Click" Margin="10,0,10,10"/>

            <!-- Label Toolbox -->
            <TextBlock Text="Toolbox" FontWeight="Bold" Margin="0,0,0,10"/>
                <Button Content="Add Text" Click="AddText_Click" Margin="10,0,10,5"/>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <!-- Label canvas -->
            <Border Grid.Row="1" Grid.Column="1"
            BorderBrush="Black"
            BorderThickness="2" Background="#FFC1C1C1">
                <Viewbox Stretch="Uniform" OpacityMask="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}">
                    <Canvas x:Name="LabelCanvas"
                    Margin="10,20,10,20"
                    Width="812" Height="1218"
                    Background="White"/>
                </Viewbox>
            </Border>
        </Grid>
    </Grid>
</Window>
