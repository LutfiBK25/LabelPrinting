<Window x:Class="LabelDesigner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabelDesigner"
        mc:Ignorable="d"
        MinHeight="600" 
        MinWidth="920"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Border Background="#272537" CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Text="Designer"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="22"
                       Margin="20,0,0,0"/>

            <StackPanel Grid.Row="1">
                <!-- Label Size -->
                <TextBlock Text="Label Size" 
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Width (in):" 
                           Margin="10,0,10,0"
                           Foreground="White"/>
                <TextBox x:Name="WidthBox" Text="4" 
                         Margin="0,0,0,5"/>
                <TextBlock Text="Height (in):" 
                           Margin="10,0,10,0"
                           Foreground="White"/>
                <TextBox x:Name="HeightBox" Text="4" Margin="0,0,0,10"/>
                <Button Content="Set Label Size"
                Click="ApplySize_Click" Margin="10,0,10,10"/>
                <!-- Label Toolbox -->
                <TextBlock Text="Toolbox" FontWeight="Bold" 
                           Margin="0,0,0,10"
                           Foreground="White"/>
                <Button Content="TextBox"
                        Click="AddText_Click"
                        Height="50"
                        Foreground="White"
                        FontSize="14"
                        Style="{StaticResource MenuButtonTheme}"/>
            </StackPanel>

            <!-- Label canvas -->
            <Border Grid.Row="1" 
                    Grid.Column="1"
		            BorderThickness="2" 
                    Background="#1E1F2B"
                    CornerRadius="20,0,20,0">
                <Viewbox Stretch="Uniform" OpacityMask="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}">
                    <Canvas x:Name="LabelCanvas"
                            Margin="10,20,10,20"
                            Width="100" Height="100"
                            Background="White"/>
                </Viewbox>
            </Border>

        </Grid>


    </Border>
    
</Window>
